<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>signup_details</servlet-name>
        <servlet-class>com.servlet.signup_details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_details</servlet-name>
        <servlet-class>com.servlet.login_details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>java</servlet-name>
        <servlet-class>LoginServlet.java</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup_details</servlet-name>
        <url-pattern>/signup_details</url-pattern>
        <http-method>POST</http-method>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_details</servlet-name>
        <url-pattern>/login_details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>java</servlet-name>
        <url-pattern>/java</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
        <servlet>
            <servlet-name>signup_details</servlet-name>
            <servlet-class>com.servlet.signup_details</servlet-class>
        </servlet>
        <servlet-mapping/>
        <servlet-name/>
        <servlet-class/>
    </session-config>
</web-app>
